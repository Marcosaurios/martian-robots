{
  "extends": [
    "airbnb-base"
    // "plugin:@typescript-eslint/recommended",
    // "eslint-config-prettier"
  ],
  "plugins": ["@typescript-eslint", "prettier", "eslint-plugin-prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    },
    "import/resolver": {
      "typescript": {}
    }
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
