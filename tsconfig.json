{
    "compilerOptions": {
      "jsx": "preserve",
      "module": "commonjs",
      "target": "esnext",
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "lib": ["dom", "esnext", "es2020"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "outDir": "build"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
  }
  